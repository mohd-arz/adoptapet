generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   @default("")
  type      String   @default("buyer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]
  @@index([email])
}

model Pet {
  id        Int       @id @default(autoincrement())
  pet_id    String    @default(uuid())
  name      String
  image_url String
  thumb_url String?
  sex       PetSex?
  age       PetAge?
  type      PetType
  other     String?
  location_id Int
  location  Location @relation(fields: [location_id],references: [id])
  breed_id  Int?
  breed     Breed?     @relation(fields: [breed_id],references: [id])
  status    Boolean   @default(true)
  createdBy Int
  seller    User      @relation(fields: [createdBy],references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Location {
  id Int @id @default(autoincrement())
  name String 
  pet Pet[]
}

enum PetType {
  DOG
  CAT
  OTHERS
}

enum PetAge {
  YOUNG
  ADULT
  SENIOR
}

enum PetSex {
  MALE
  FEMALE
}

model Breed {
  id        Int       @id @default(autoincrement())
  name      String
  type      PetType
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  pets      Pet[]
}